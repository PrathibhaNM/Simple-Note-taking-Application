<% layout('/layouts/boilerplate')-%>
<div class="container mt-5">
    <h1 class="text-primary"><%= note.title %></h1>
    <ul class="list-unstyled">
        <li><strong>Content:</strong> <%= note.content %></li>
        <li><strong>Created time:</strong> <%= note.createdAt %></li>
        <li><strong>Updated time:</strong> <%= note.updatedAt %></li>
    </ul>

    <a href="/notes/<%= note._id %>/edit" class="btn btn-warning mb-3">Edit</a>
    <a href="/notes" class="btn btn-secondary mb-3">All Notes</a>

    <form action="/notes/<%= note._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this note?');">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div> 












