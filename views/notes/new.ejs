<% layout('/layouts/boilerplate')-%>

<div class="row">
        <h1 class="text-center">CREATE A NOTE</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/notes" method="POST" novalidate class="validated-form">
           

                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="title" id="title" placeholder="Title for the note" required>
                    <div class="valid-feedback">Looks good!!</div>
                </div>
        
                <div class="mb-3">
                    <label class="form-label" for="content">Content</label>
                    <textarea class="form-control" name="content" id="content" cols="30" rows="5" placeholder="Describe the note....." required></textarea>
                    <div class="valid-feedback">Looks good!!</div>
                </div>

                

                <div class="mb-3">
                    <button class="btn btn-info">Create Note</button>
               </div>

                

               
                </div>

              
                

                
            </form>
        
           
    </div>

</div>
    

